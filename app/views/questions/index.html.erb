<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

<%= form_tag questions_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :question => nil %>
<% end %>


	<h1>Questions</h1>
	<%= link_to "Ask a question", new_question_path, :class => "btn btn-info" %>
	<%= link_to "My question", question_my_questions_path(@questions), :class => "btn btn-info" %>
	<div id="accordion" class="panel-group">
		<% @questions.each do |q| %>
			<div class="panel panel-default">
				<%= q.question %>
			</div>
			<div>
				<br/>
				<%= link_to "See Answers", answers_path(question_id: q.id), :class => "btn btn-info"  %>
				<%= link_to "Write an Answer", new_answer_path(question_id: q.id ), :class => "btn btn-info" %><br/><br/>
			</div>
		<% end %>
	</div>
	<br/><br/><br/>
</div>